<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.assignment.fragment.ChangepasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d_134"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d_40"
            android:src="@drawable/logodung"
            tools:ignore="ContentDescription" />


        <ImageView
            android:id="@+id/circle3"
            android:layout_width="@dimen/d_182"
            android:layout_height="@dimen/d_182"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="-80dp"
            android:layout_marginBottom="-40dp"
            android:src="@drawable/circle" />


        <LinearLayout
            android:id="@+id/linearLayoutchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingBottom="50dp">


            <TextView
                android:id="@+id/tvSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d_20"
                android:layout_marginBottom="@dimen/d_20"
                android:text="ĐỔI MẬT KHẨU"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintEnabled="false">

                <EditText
                    android:id="@+id/edtCUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="@drawable/background_edttext"
                    android:hint="Nhập tên tài khoản"
                    android:inputType="text"
                    android:padding="@dimen/d_14"
                    android:scrollHorizontally="true"
                    android:textColorHint="@color/grey_dam"
                    android:textSize="15dp" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtUserName"
                android:layout_marginTop="@dimen/d_15"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey_dam">

                <EditText
                    android:id="@+id/edtCPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="@drawable/background_edttext"
                    android:hint="Nhập mật khẩu cũ"
                    android:inputType="textPassword"
                    android:padding="@dimen/d_14"
                    android:scrollHorizontally="true"
                    android:textColorHint="@color/grey_dam"
                    android:textSize="15sp" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtUserName"
                android:layout_marginTop="@dimen/d_15"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/grey_dam">

                <EditText
                    android:id="@+id/edtNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d_10"
                    android:layout_marginRight="@dimen/d_10"
                    android:background="@drawable/background_edttext"
                    android:hint="Nhập mật khẩu mới"
                    android:inputType="textPassword"
                    android:padding="14dp"
                    android:scrollHorizontally="true"
                    android:textColorHint="@color/grey_dam"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d_20"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ui"
                    android:text="Xác nhận"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/btnRelay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_ui"
                    android:text="Nhập lại"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>

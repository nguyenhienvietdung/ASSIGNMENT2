<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.assignment.IntroActivity"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/img_intro"
        android:layout_width="@dimen/d_200"
        android:layout_height="@dimen/d_200"
        android:src="@drawable/money_intro"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/txt_Tiltintro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d_10"
        android:layout_marginBottom="@dimen/d_30"
        android:text="QUẢN LÍ THU CHI"
        android:textColor="@color/grey_dam"
        android:textSize="25sp" />
</LinearLayout>
